<%- include('../partials/header') %>
<main>
    <h2>Restaurant <%= rstrnt.name %>...</h2>
    <p>Link: <a href="<%= rstrnt.url %>"></a>&nbsp;|
    Address: <%= rstrnt.address %>&nbsp;|
    Phone: <%= rstrnt.phone %></p>

    <section id="menu-items">
        <% rstrnt.menus.forEach(function(m) { %>
            <div><%= m.price %> | <%= m.name %></div>
        <% }); %>
        <form id="add-menu" action="/rstrnts/<%= rstrnt._id %>/menus" method="POST">
            <label>Menu Item:
                <input type="text" name="name">
            </label>
            <label>Price:
                <input type="number" name="price">
            </label>
            <input type="submit" value="Add Menu Item">
        </form>
    </section>

    <section id="comments">
        <% rstrnt.comments.forEach(function(c) { %>
            <div>
                <h3><%= c.creator %> says...</h3>
                <%= c.satisfaction %> | <%= c.content %>
            </div>
        <% }); %>
        <form id="add-comment" action="/rstrnts/<%= rstrnt._id %>/comments" method="POST">
            <label>Satisfied?
                <select name="satisfaction">
                    <option disabled selected value></option>
                    <option value=1>Bad!</option>
                    <option value=2>Alright</option>
                    <option value=3>Great!</option>
                </select>            
            </label>
            <label>Comment:
                <input type="text" name="content">
            </label>
            <input type="submit" value="Add Comment">
        </form>
    </section>
</main>
<%- include('../partials/footer') %>
